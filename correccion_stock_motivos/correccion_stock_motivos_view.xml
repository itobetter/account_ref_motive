<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="correccion_stock_motivos_form">
			<field name="name">correccion.stock.motivos.form</field>
			<field name="model">correccion.stock.motivos</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Motivos de Correccion de Stock">
					<group col="2" colspan="1">
						<field name="codigo"/>
						<field name="motivo"/>
						<field name="account_id"/>
						<field name="account_analytic_id"/>
					</group>
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="correccion_stock_motivos_tree">
			<field name="name">correccion.stock.motivos.tree</field>
			<field name="model">correccion.stock.motivos</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Motivos de Correccion de Stock">
					<field name="codigo"/>
					<field name="motivo"/>
					<field name="account_id"/>
					<field name="account_analytic_id"/>
				</tree>
			</field>
		</record>
		<record model="ir.actions.act_window" id="correccion_stock_motivos_seq">
			<field name="name">Motivos de Correccion de Stock</field>
			<field name="res_model">correccion.stock.motivos</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record model="ir.ui.view" id="correccion_stock_motivos_search">
            <field name="name">correccion.stock.motivos.search</field>
            <field name="model">correccion.stock.motivos</field>
            <field name="arch" type="xml">
                <search string="Lista de Motivos">
                    <field name="codigo" string="Codigo" filter_domain="[('codigo','ilike', self)]"/>
                    <separator/>
                </search>
            </field>
        </record>

		<menuitem id="menu_conf_inventario" name="Inventario" parent="account.menu_finance_configuration"/>
		<menuitem id="menu_correccion_stock_motivos" name="Motivos de Correccion de Stock" action="correccion_stock_motivos_seq" parent="menu_conf_inventario"/>
	</data>
</openerp>